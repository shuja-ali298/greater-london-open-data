    <style>
      :root {
        --primary-color: #1475B8;
        --white-color: #fff;
        --yellow-color: #ffd836;
        --links-border-radius: 0.1875rem;
      }

      html {
        -ms-text-size-adjust: 100%;
        -webkit-text-size-adjust: 100%;
      }

      body {
        margin: 0 auto;
        padding: 0 1em 4em 1em;
        max-width: 28em;
        font-family: "Source Sans Pro", Helvetica, Arial, sans-serif;
        color: var(--white-color);
        background-color: var(--primary-color);
      }

      .logo {
        display: inline-block;
        padding: 0.875rem 1rem;
        background-color: var(--white-color);
        border-bottom-left-radius: var(--links-border-radius);
        border-bottom-right-radius: var(--links-border-radius);
        transition: background-color 0.3s ease;
      }
      .logo:hover {
        background-color: rgba(255,255,255, 0.8);
      }
      .logo:focus {
        background-color: var(--yellow-color);
      }

      img {
        border: none;
      }

      h1 {
        font-size: 3em;
        line-height: 1em;
        margin: 1em 0 0.5em 0;
        font-weight: 600;
      }

      p {
        font-size: 1.3125rem;
        line-height: 1.4em;
        margin: 1em 0 0 0;
      }

      .social {
        font-size: 1.125rem;
        padding: 0;
        margin: 2em -1em 0 -1em;
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 1rem;
      }

      .social li {
        list-style: none;
        margin: 0 1em 0.5em 1em;
      }

      .social a {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        gap: 0.25rem;
        color: var(--white-color);
        opacity: 0.9;
        text-decoration: none;
        padding: 1rem;
        margin: 0 -1rem;
        transition: color 0.3s ease, background-color 0.3s ease;
        border-radius: var(--links-border-radius);
      }

      .social a:hover {
        color: var(--primary-color);
        background: var(--white-color);
      }

      .social a:focus {
        color: #333;
        background: var(--yellow-color);
      }

      .social img {
        vertical-align: -0.33em;
        margin-right: 0.3em;
      }

      @media(min-width: 24em){
        h1 {
          font-size: 4em;
        }
        .social {
          margin-top: 3em;
        }
        .social li {
          display: inline;
          margin-bottom: 0;
        }
      }
    </style>
